{{> /layout/header}}

<div class="container p-5">
    <h2>등록한 상품 리스트</h2>
    <br>

    <div class="row">
        {{#productList}}
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://m.lovelanc.com/web/product/big/Lbig230706-48ea_j27.jpg" width="300"
                                 height="300">
                            <div class="mt-3">
                                <h4>{{name}}</h4>
                                <p class="text-muted font-size-sm">상품 수량 : {{qty}}</p>
                                <p class="text-muted font-size-sm">상품 가격 : {{price}}</p>
                                <div class="new-create-button">
                                    <a href="/product/{{id}}" class="btn btn-outline-primary">상세보기</a>
                                </div>
                                <button class="btn btn-primary">삭제</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/productList}}
    </div>

    <ul class="pagination d-flex justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>

</div>

{{> /layout/footer}}
